@model Shopping.Models.CityViewModel

@{
    ViewData["Title"] = "Add City";
}
<flash dismissable="true" />
<h1>Create</h1>

<h4>State</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId" />

            <Partial name="_City" />
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
